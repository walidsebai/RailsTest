<h2>Log in</h2>
<div class="col-xl-6">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:'form-signin'})  do |f| %>
  <div class="field">
    <%= f.label :email ,class:'sr-only'%><br />
    <%= f.email_field :email, autofocus: true, id:"inputEmail",placeholder:"Email address", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off",id:"inputPassword", placeholder:"password",class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" ,class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
